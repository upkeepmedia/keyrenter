<div x-data="{inView : false}" x-intersect="inView = true">
  <div class="flex flex-row">
    <div class="w-1/2 rounded-2xl relative duration-500 transition-all" :class="inView ? 'translate-x-0 opacity-100':'-translate-x-16 opacity-0'">
      {{
        page.media[page.header.featured_image].loading.html(
          'About',
          '',
          'absolute top-0 bottom-0 h-full w-full object-cover rounded-r-2xl'
        )|raw
      }}
      <div class="w-60 relative z-10 ml-auto">
        {{ svg_image(page.media[page.header.state].filepath, 'w-60')|raw }}
      </div>
    </div>
  </div>
  <div class="container flex flex-row mx-auto px-20 relative z-20" >
    <div class="w-1/4 text-right mt-10 pr-10 z-10 relative overflow-hidden" >
      <div class="transition-all delay-500 duration-700 z-10 relative py-10" :class="inView ? 'translate-x-0 opacity-100':'translate-x-32 opacity-0'">
        {{ svg_image(page.media['areas.svg'].filepath, '')|raw }}
        <h3 class="h3 mb-5 mt-0">
          Areas We Serve
        </h3>
        <ul class="flex flex-row flex-wrap">
          {% for a in page.find('/areas-we-serve').header.areas %}
            <li class="w-1/2 mb-2">
              {% if a.page %}
                <a href="{{ page.find(a.page).url }}">{{ a.name }}</a>
              {% else %}
                <span>{{ a.name }}</span>
              {% endif %}
            </li>
          {% endfor %}
        </ul>
      </div>
      <div class=" duration-500 transition-all absolute -mt-36  w-36 h-72 top-1/2 delay-200 ease-in-out rounded-l-full bg-green-300" :class="inView ? 'right-0':'-right-full'"></div>
      <div class="absolute top-0 right-0 w-0.5 h-full bg-green-800 duration-500 ease-in-out transition-all " :class="inView ? 'scale-y-100':'scale-y-0'"></div>
    </div>
    <div class="w-3/5 ml-auto -translate-y-16 transition-all duration-500" :class="inView ? '-translate-x-16 opacity-100':'translate-x-0 opacity-0'">
      {{ page.content|raw }}
    </div>
  </div>
</div>
