<div class="mx-auto container p-20"  x-data="{inView: false}"> 
  <div class="text-center mx-auto w-3/4">
    {{page.content|raw}}
  </div>
  <div class="flex flex-row flex-wrap justify-between " x-intersect.half="inView = true">
  {% for f in page.header.facts %}
      <div class="w-1/4 px-10 text-center">
        <div class="relative overflow-hidden">
          <div class="font-heading font-bold text-6xl text-green-700 relative z-10 pb-4 ">
            {% for letter in f.text|split('') %}<span :class="inView ? 'translate-y-1/2':'translate-y-full'" style="transition-delay: {{ loop.index * 100 + 300}}ms" class="duration-300 inline-block transition-all">{{letter|raw}}</span>{% endfor %}
          </div>
          
          <div class="duration-500 transition-all h-0.5 w-full relative z-10 bg-green-900" :class="inView ? 'scale-x-100 ': 'scale-x-0'"></div>
        </div>
        <div class="relative overflow-hidden pb-16">
        <div class="duration-500 transition-all absolute z-0 w-1/2 left-1/4 h-10 bg-green-300 rounded-b-full block" :class="inView ? 'top-0 ': '-top-full '"></div>
        <div class="duration-500 delay-300 transition-all font-bold text-2xl relative z-10" :class="inView ? 'translate-y-0': '-translate-y-16'">
          {{f.title}}
        </div>
        </div>
      </div>
  {% endfor %}
  </div>
</div>
